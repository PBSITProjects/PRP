<div class = "row">
  <div class = "col-sm-12 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
  	<div class = "card">
  	  <div class = "card-header login-header">
  	    <h2>
          <%=I18n.t('user_forgot_pass.title')%>
        </h2>
  	  </div> 
  	  <div class = "card-body">
        <%= form_for(resource, as: resource_name,
        url: password_path(resource_name),
        html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>
          <div class = "form-group">
            <%= f.label :email,
            (I18n.t('user_forgot_pass.password_text'))  %>
            <br />
            <%= f.email_field :email, 
            autofocus: true, 
            autocomplete: "email",
            class: 'form-control' %>
          </div>

          <div class="actions" >
            <%= f.submit (I18n.t('user_forgot_pass.reset_password_btn')),
            class: 'btn btn-padgett' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


