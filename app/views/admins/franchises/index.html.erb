<%if @destination == "franchise_edit"%>
  <div class = "row col-12">
    <%=link_to new_admins_franchise_path do%>
      <button class = 'btn btn-padgett'>
        Create Franchise
      </button>
    <%end%>
  </div>
<%end%>


  <%= form_tag admins_franchises_path, :method => 'get',
      :id => "franchise_search", class: 'pt-2 pb-2'  do %>
      <div class = "form-group row">
        <%=label_tag "search" , "Search by Last / First Name",class:'col-form-label col-md-4 col-sm-4 col-lg-3' %>
        <div class = "col-sm-4 col-md-4 col-lg-3">
          <%= text_field_tag :search, params[:search],
         class:'form-control input-sm' %>
        </div>

       <div class = "col-sm-3 col-md-3 col-lg-2">
         <%= submit_tag "Search", :lastname => nil,
         class:'btn btn-padgett'%>
       </div>
      </div>   
  <% end %>


<div class = "row">
  <div id="franchises" class="col" >
    <%=render partial: 'franchise_list',
      :locals => {:destination => @destination}%>
  </div>
</div>