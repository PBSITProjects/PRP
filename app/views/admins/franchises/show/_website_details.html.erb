<div class = "card">
  <div class = "card-body card-background-padgett">
    <table class = "table
           table-striped table-in-card">
      <thead>
        <tr>
          <th scope="col" 
              style="text-align:left">
            <%=I18n.t('website_preference.index.web_preference')%>
          </th>
          <th scope = "col" 
              style = "text-align:left">
            <%=I18n.t('website_preference.index.created')%>
          </th>

          <th scope = "col" 
              style = "text-align:left">
            <%=I18n.t('website_preference.index.modified')%>
          </th>
          <th scope = "col" 
              style = "text-align:left">
            <%=I18n.t('website_preference.index.paid_with')%>
          </th>
          <th scope = "col" 
              style = "text-align:right">
            <%=I18n.t('website_preference.index.active_fee')%>
          </th>
          
          <th>
          </th>
          
        </tr>
      </thead>
      <tbody>
        <% if franchise.website_preference%>
          <%wp = franchise.website_preference%>
          <tr>
            <th align = "left" class="text-nowrap">
              <%=wp.preference_description%>
            </th>
            <td align="left" class = "text-nowrap">
              <%=I18n.l(wp.created_at.in_time_zone, format: :prp)%>
            </td>
            <td align="left" class = "text-nowrap">
              <%=I18n.l(wp.updated_at.in_time_zone, format: :prp)%>
            </td>
            <td align="left" class="text-nowrap">
              <%=wp.paid_with%>
            </td>
            <td align="right" class="text-nowrap">
              <%=number_to_currency(wp.current_fee)%>
            </td>
            <%if can? :edit, wp%>
            <td align="center">
              <%=link_with_icon(
                edit_admins_website_preference_path(id: wp),
                "edit",
                I18n.t('website_preference.index.edit_link'),
                "",
                false)%>
            </td>
            <%end%>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div>

                