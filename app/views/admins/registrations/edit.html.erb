<div class = "row">
  <div class = "col-sm-12 col-md-8 
       offset-md-2 col-lg-6 offset-lg-3">
    <div class = "card">
      <div class = "card-header login-header">
        <h2>
          <%=I18n.t('admin_profile.edit_profile')%>
        </h2>
      </div>
      <div class = "card-body">
        <%= form_for(resource, as: resource_name, 
        url: admin_registration_path(),
        html: { method: :put }) do |f| %>
          
          <%=devise_error_messages!%>

          <div class = "form-group">
            <%= f.label :email,
            (I18n.t('admin_profile.email'))%><br />
            
            <%= f.email_field :email, 
            readonly: true,
            class: 'form-control'%>
          </div>

          <div class = "form-group">
            <%= f.label :password,
            (I18n.t('admin_profile.password')) %>
            <%if @minimum_password_length%>
              <em>
                <%=I18n.t('admin_profile.password_min')%>
              </em>
            <%end%>
            
            <%=f.password_field :password,
            autocomplete: "new-password",
            autofocus: true,
            class: 'form-control'%>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation,
            (I18n.t('admin_profile.password_conf'))%><br>
            
            <%= f.password_field :password_confirmation,
            autocomplete: "new-password",
            class: 'form-control' %>
          </div>

          <div class = "form-group">
            <%=f.label :time_zone, 
            I18n.t('admin_profile.time_zone')%>
            <br>

            <%=f.time_zone_select :time_zone, 
               nil,
               {default: "Eastern Time (US & Canada)"},
               {class: 'form-control'}%>
          </div>

      </div>    

      <div class = "card-footer">
        <div class="form-group">
          <%= f.label :current_password,
          I18n.t('admin_profile.current_pass') %>
          <br>
          <em>
            <%=I18n.t('admin_profile.current_pass_info')%>
          </em>
          <br>
          <%= f.password_field :current_password,
            autocomplete: "current-password",
            class: 'form-control' %>
        </div>
      </div>
      
      <div class = "col-4 actions"  >
        <%=f.submit (I18n.t('admin_profile.save_button')),
        class: "btn btn-padgett"%>
        <br>
        <br>
      </div>
     <%end%>

    </div>
  </div>
</div>


