<div class = "row col-12">
  <%=link_to admins_franchises_path(destination: 'add_accountant'),
     data: {turbolinks: false} do%>
     <button class = 'btn btn-padgett'>
       Add Accountant
     </button>
  <%end%>
</div>


<!-- Form that filters through the franchise list -->
  <%= form_tag admins_accountants_path, :method => 'get',
      :id => "accountant_search", class: 'pt-2 pb-2'  do %>
      <div class = "form-group row">
        
        <div class = "col-sm-6 col-md-6 col-lg-4">
          <%= text_field_tag :search, params[:search],
         class:'form-control input-sm', placeholder: "Search by first or last name" %>
        </div>

       <div class = "col-sm-3 col-md-3 col-lg-2 no-padding">
         <%= submit_tag "Search", :lastname => nil,
         class:'btn btn-padgett'%>
       </div>
      </div>   
  <% end %>

<!-- Accountant list -->
<div class = "row">
  <div id="accountants" class="col" >
    <%=render partial: 'accountant_list'%>
  </div>
</div>