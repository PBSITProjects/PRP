<div class = "col-12">
  <%=link_to admins_franchises_select_index_path(destination: 'add_accountant'),
     data: {turbolinks: false} do%>
     <button class = 'btn btn-padgett'>
       <%=I18n.t('accountant.index.add_accountant')%>
     </button>
  <%end%>
</div>


<!-- Form that filters through the franchise list -->
  <%= form_tag admins_accountants_path, 
      :method => 'get',
      :id => "accountant_search", 
      class: 'pt-2 pb-2'  do %>
      <div class = "form-group row col-12">
        
        <div class = "col-sm-6 col-md-6 col-lg-4">
          <%= text_field_tag :search, params[:search],
         class:'form-control input-sm', 
          placeholder: I18n.t('accountant.index.search_by_name') %>
        </div>
      </div>   
  <% end %>

<!-- Accountant list -->
<div class = "col-12">
  <div id="accountants" >
    <%=render partial: 'accountant_list'%>
  </div>
</div>