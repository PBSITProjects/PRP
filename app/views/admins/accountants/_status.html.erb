<div class = "card">
  <div class = "card-header login_header">
    Accountant Status
  </div>
  
  <div class = "card-body card-background-padgett">
    <div class = "form-row col-12">
      <!-- START DATE -->
      <div class = "form-group form-row col-6">
        <%=f.label :start_date, "Start Date",
        class: "col-md-4 col-sm-4 col-lg-4 
        col-form-label-sm label-bold" %>
        <div class = "col-sm-5 col-md-5 col-lg-4">
          <%=f.text_field :start_date, value: (l f.object.start_date if f.object.start_date),
          class: 'form-control form-control-sm col text-center',
          id: "accountant_start_date"  , style: "display:inline-block; vertical-align: middle; width: 60%;margin: 0 5px 0 0;",
           required: true%>
        </div>
      </div>
      <!-- TERM DATE -->
      <div class = "form-group form-row col-6">
        <%=f.label :term_date, "Termination Date",
        class: 'col-md-4 col-sm-4 col-lg-4
          col-form-label-sm label-bold'%>
        <div class = "col-sm-5 col-md-5 col-lg-4">
          <%= f.text_field :term_date, value: (l f.object.term_date if f.object.term_date),
          class: 'form-control form-control-sm col text-center',
          id: "accountant_term_date"  , style: "display:inline-block; vertical-align: middle; width: 60%;margin: 0 5px 0 0;"%>
        </div>
      </div>
    </div>
    <div class = "form-row col-12">
      <!-- INACTIVE -->
      <div class = "form-group form-row col-6">
        <%=f.label :inactive, "Inactive",
        class: "col-md-4 col-sm-4 col-lg-4 
        col-form-label-sm label-bold" %>
        <div class = "col-sm-7 col-md-7 col-lg-7">
          <%=f.check_box :inactive,
          class: 'form-control form-control-sm col', style: "width:15px;vertical-align:middle"%>
        </div>
      </div>
       <!-- ADVISORY BOARD -->
      <div class = "form-group form-row col-6">
        <%=f.label :advisory_board, "Advisory Board",
        class: "col-md-4 col-sm-4 col-lg-4 
        col-form-label-sm label-bold" %>
        <div class = "col-sm-7 col-md-7 col-lg-7">
          <%=f.check_box :advisory_board,
          class: 'form-control form-control-sm col', style: "width:15px;vertical-align:middle"%>
        </div>
      </div>
    </div>
   
  </div>
</div>  