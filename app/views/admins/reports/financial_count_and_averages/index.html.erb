<div class = "col-12">
<div class = "card">
	<div class = "card-header login-header">
	  <h4>
	  	<%=I18n.t('reports.financial_count_averages.title')%>
   	</h4>
	</div>

	<%=form_tag admins_financial_count_averages_render_path(format: :html),
	method: "post" do |f|%>

	<div class = "card-body card-background-padgett">
		<div class = "form-row">
			<%=year_dropdown(
				"year",
				"form-group form-row col-12",
				"col-form-label col-form-label-sm label-bold col-sm-2 col-md-2 col-lg-1 col-xl-1",
				"col-sm-3 col-md-2 col-lg-1 col-xl-1",
				Financial.get_min_year,
				Financial.get_max_year
				)%>
		</div>

		<div class = "form-row">
			<%=select_franchise_dropdown(
				"franchise",
				"form-group form-row col-12",
				"col-form-label col-form-label-sm label-bold
				 col-sm-2 col-md-2 col-lg-1 col-xl-1",
				"col-sm-6 col-md-5
				 col-lg-4 col-xl-3"
				)%>
		</div>
		<div class = "form-row">
			<%=sort_by_number_or_name(
				"sortby",
				"form-group form-row col-12",
				"col-form-label col-form-label-sm label-bold
				 col-sm-2 col-md-2 col-lg-1 col-xl-1",
				"col-sm-4 col-md-3
				 col-lg-3 col-xl-2",
				 {"franchise_number" => I18n.t('reports.general.sort_by_fran'), "lastname" => I18n.t('reports.general.sort_by_lastname'), "monthly_clients" => I18n.t('reports.general.sort_by_client_count'), "average_monthly_fees" => I18n.t('reports.general.sort_by_average_fees')})%>
		</div>

	</div>

	<div class = "card-footer">
		<div class = "col-6 col-sm-3 col-md-2 
		              col-lg-2 col-xl-1 pl-0">
			<%=submit_tag (I18n.t('reports.general.btn_generate')),
			class: "btn btn-padgett btn-block"%>
		</div> 
	</div>
	<%end%>
</div>

</div>