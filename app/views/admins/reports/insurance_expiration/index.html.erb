<div class = "card">
	<div class = "card-header login-header">
	  <h4>
	  	<%=I18n.t('reports.insurance_expiration.title_excel')%>
   	</h4>
	</div>

	<%=form_tag admins_insurance_expiration_render_path(format: :html), method: "post" do |f| %>
	  <div class = "card-body card-background-padgett">
		  <div class = "form-row">
		  	<%=date_argument(
		  		"Target Date",
		  		"target_date",
		  		"form-group form-row col-12",
		  		"col-form-label col-form-label-sm label-bold col-4 col-sm-2 col-md-2
		  		 col-lg-2",
		  		"col-6 col-sm-4 col-md-3
				 col-lg-2")
				 %>
			</div>
			<div class = "form-row">
		  	<%=sort_by_number_or_name(
				"sortby",
				"form-group form-row col-12",
				"col-form-label col-form-label-sm label-bold
				 col-4 col-sm-2 col-md-2 col-lg-2",
				"col-8 col-sm-4 col-md-3
				 col-lg-3",
				 {"franchises.franchise_number" => I18n.t('reports.general.sort_by_fran'), "franchises.lastname" => I18n.t('reports.general.sort_by_lastname')})%>
		
			</div>
		</div>
		
		<div class = "card-footer">
		<div class = "col-6 col-sm-3 col-md-2 
		              col-lg-2 pl-0">
			<%=submit_tag (I18n.t('reports.general.btn_generate')),
			class: "btn btn-padgett btn-block"%>
		</div> 
	</div>
	<%end%>
</div>	
		  	

