<div class = "col-12">
<div class = "card">
	<div class = "card-header login-header">
	  <h4>
	  	<%=I18n.t('reports.website_preferences_list.title')%>
   	</h4>
	</div>

	<%=form_tag admins_website_preferences_list_render_path(format: :html),
	method: "post" do |f|%>

	<div class = "card-body card-background-padgett">
		<div class = "form-row">
			<%=sort_by_number_or_name(
				"sortby",
				"form-group form-row col-12",
				"col-form-label col-form-label-sm label-bold
				 col-4 col-sm-4 col-md-3 col-lg-2 col-xl-1",
				"col-8 col-sm-4 col-md-3
				 col-lg-3 col-xl-2",
				 {"franchises.franchise_number" => I18n.t('reports.general.sort_by_fran'), "franchises.lastname" => I18n.t('reports.general.sort_by_lastname'), "website_preferences.updated_at" => I18n.t('reports.general.sort_by_modified')})%>
		</div>

	</div>

	<div class = "card-footer">
		<div class = "col-6 col-sm-3 col-md-2 
		              col-lg-3 col-xl-1 pl-0">
			<%=submit_tag (I18n.t('reports.general.btn_generate')),
			class: "btn btn-padgett btn-block"%>
		</div> 
	</div>
	<%end%>
</div>

</div>