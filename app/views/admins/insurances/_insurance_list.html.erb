<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>


  <table id = "insurance-list" class="table table-sm table-striped table-dan ">
    <thead>
      <tr>
        <!-- Franchise Number -->
        <th scope = "col" style="text-align:left">
          <%=sortable "franchises.franchise_number", "Franchise" %>
        </th>
        <!-- Franchise Name  -->
        <th scope = "col" style="text-align:left">
          <%=sortable "franchises.lastname" , "Name" %>
        </th>
        
        <!-- EO Insurance -->
        <th scope = "col" style = "text-align:center">
          E&amp;O Insurance
        </th>

        <!-- EO Expiration -->
        <th scope = "col" style = "text-align:center">
          Expires On
        </th>

        <!-- Gen Insurance -->
        <th scope = "col" style = "text-align:center">
          General Insurance
        </th>

        <!-- General Expiration -->
        <th scope = "col" style = "text-align:center">
          Expires On
        </th>

        <!-- Other Insurance -->
        <th scope = "col" style = "text-align:center">
          Other Insurance
        </th>

        <!-- Other Expiration -->
        <th scope = "col" style = "text-align:center">
          Expires On
        </th>        

        <!-- For Edit link we have 2 other columns  -->
        <th scope = "col"></th>
        
      </tr>
    </thead>
    <!-- Go through our filtered franchises  -->
    <% @insurances.each do |insurance| %>
      <tr>
        <!-- Franchise  -->
        <th  align="left" class = "text-nowrap">
          <%=insurance.franchise_number %> 
        </td>
        <!-- Franchise Name  -->
        <th align="left" class = "text-nowrap">
          <%=insurance.lastname%> <%=insurance.firstname%>
        </th>
        <!-- EO Insurance -->
        <td align="center" class = "text-nowrap">
          <%=display_checkmark(insurance.eo_insurance)%>
        </td>

        <!-- EO Expiration -->
        <td align="center" class = "text-nowrap">
          <%=l insurance.eo_expiration if insurance.eo_expiration%>
        </td>

        <!-- Gen Insurance -->
        <td align="center" class = "text-nowrap">
          <%=display_checkmark(insurance.gen_insurance)%>
        </td>

        <!-- Gen Expiration -->
        <td align="center" class = "text-nowrap">
          <%=l insurance.gen_expiration if insurance.gen_expiration%>
        </td>

         <!-- Other Insurance -->
        <td align="center" class = "text-nowrap">
          <%=display_checkmark(insurance.other_insurance, insurance.other_description)%>
        </td>

        <!-- Other Expiration -->
        <td align="center" class = "text-nowrap">
          <%=l insurance.other_expiration if insurance.other_expiration%>
        </td>

        <!-- Edit Icon and Link  -->
        <%if can? :edit, insurance%>
          <td class = "text-nowrap">
            <%=link_with_icon(edit_admins_insurance_path(id: insurance),
                "edit",
                "Edit this insurance record",
                "",
                false)%> 
          </td>
        <%else%>
          <td></td>
        <%end%>
        
      </tr>
    <% end %>
  </table>
  <!-- Pagination Links  -->
  <div class = "row justify-content-center">
    <div class = "flickr_pagination">
      <%= will_paginate @insurances %>
    </div>
  </div>


